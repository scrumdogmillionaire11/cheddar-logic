# FPL Sage API Environment Configuration
# Copy this to .env and customize

# ===== UNLIMITED ACCESS CONFIGURATION =====
# Feature flag - set to false to disable unlimited access entirely
# This is your ROLLBACK switch for production
FPL_SAGE_UNLIMITED_ACCESS_ENABLED=true

# Team IDs with unlimited access (comma-separated, no spaces needed)
# Leave empty or set ENABLED=false to disable
FPL_SAGE_UNLIMITED_TEAMS=711511,1930561

# ===== REDIS CONFIGURATION =====
FPL_SAGE_REDIS_URL=redis://localhost:6379

# ===== API CONFIGURATION =====
FPL_SAGE_DEBUG=false
FPL_SAGE_API_V1_PREFIX=/api/v1

# ===== RATE LIMITING =====
FPL_SAGE_RATE_LIMIT_ENABLED=true
FPL_SAGE_RATE_LIMIT_REQUESTS_PER_HOUR=100

# ===== CACHING =====
FPL_SAGE_CACHE_ENABLED=true
FPL_SAGE_CACHE_TTL_SECONDS=300
