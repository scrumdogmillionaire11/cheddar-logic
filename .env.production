# ----------------------------------
# cheddarlogic.com Production Environment
# ----------------------------------

APP_NAME=cheddarlogic
APP_ENV=production
NODE_ENV=production
PUBLIC_DOMAIN=https://cheddarlogic.com

# ----------------------------------
# Database (SQLite on Pi)
# ----------------------------------
DATABASE_URL=sqlite:////opt/cheddar-logic/packages/data/cheddar.db
DATABASE_PATH=/opt/cheddar-logic/packages/data/cheddar.db

# ----------------------------------
# Ingestion Providers
# ----------------------------------
ODDS_PROVIDER=
ODDS_API_KEY=e8d243da014123436569cc1bc73b91b4
ODDS_BASE_URL=
SPORTS=NBA,NHL,NFL,MLB,NCAAM,SOCCER,FPL

# ----------------------------------
# FPL Sage API (public via nginx)
# ----------------------------------
NEXT_PUBLIC_FPL_API_URL=https://cheddarlogic.com/api/v1
FPL_API_BASE_URL=http://localhost:8000/api/v1

# ----------------------------------
# Logging
# ----------------------------------
LOG_LEVEL=INFO

# ----------------------------------
# Redis Caching
# ----------------------------------
REDIS_URL=redis://localhost:6379/0

# ----------------------------------
# Web Configuration
# ----------------------------------
API_BASE_URL=https://cheddarlogic.com
NEXT_PUBLIC_PUBLIC_DOMAIN=https://cheddarlogic.com
NEXT_PUBLIC_API_BASE_URL=https://cheddarlogic.com

# ----------------------------------
# Authentication
# ----------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=REPLACE_WITH_GENERATED_SECRET

AUTH_MAGIC_LINK_TTL_MS=900000           # 15 minutes
AUTH_ACCESS_TTL_MS=86400000             # 24 hours
AUTH_REFRESH_TTL_MS=2592000000          # 30 days

# Dev bypass disabled for production
DEV_BYPASS_AUTH_EMAIL=
NEXT_PUBLIC_DEV_BYPASS_ENABLED=

# ----------------------------------
# Worker Scheduler Configuration
# ----------------------------------
TICK_MS=60000
DRY_RUN=false
TZ=America/New_York
FIXED_CATCHUP=true

# Enable/disable individual jobs
ENABLE_ODDS_PULL=true
ENABLE_NHL_MODEL=true
ENABLE_NBA_MODEL=true
ENABLE_NCAAM_MODEL=true
ENABLE_MLB_MODEL=false
ENABLE_NFL_MODEL=false
ENABLE_FPL_MODEL=false

# Data directory for worker
CHEDDAR_DATA_DIR=/opt/cheddar-logic/packages/data

# ----------------------------------
# FPL Sage Backend (FastAPI)
# ----------------------------------
FPL_SAGE_DEBUG=false
FPL_SAGE_REDIS_URL=redis://localhost:6379
FPL_SAGE_CORS_ALLOWED_ORIGINS=https://cheddarlogic.com,https://www.cheddarlogic.com
FPL_SAGE_CORS_ALLOWED_METHODS=GET,POST,OPTIONS
FPL_SAGE_CORS_ALLOWED_HEADERS=Authorization,Content-Type
FPL_SAGE_CACHE_ENABLED=true
FPL_SAGE_CACHE_TTL_SECONDS=300
FPL_SAGE_RATE_LIMIT_ENABLED=true
FPL_SAGE_RATE_LIMIT_REQUESTS_PER_HOUR=100
FPL_SAGE_UNLIMITED_ACCESS_ENABLED=true
FPL_SAGE_UNLIMITED_TEAMS=711511,1930561

# ----------------------------------
# Email
# ----------------------------------
RESEND_API_KEY=re_YKTK3AS7_9fVCVx5Es3uk57WwaKLXd3r4
